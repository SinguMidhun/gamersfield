<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Playerprofile.dExchangeActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:background="@color/s_green"
        android:text="Diamonds Exchange"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/lline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <androidx.cardview.widget.CardView
            android:id="@+id/exg1card"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/y_black"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/dimg1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/diamond" />

                <TextView
                    android:id="@+id/diamond1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dimg1"
                    android:layout_centerHorizontal="true"
                    android:text="10,000 Diamonds"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/diamond1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/coin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="20"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_toEndOf="@+id/coin1"
                        android:src="@drawable/gcoinlogo" />


                </RelativeLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exg2card"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/y_black"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/dimg2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/diamond" />

                <TextView
                    android:id="@+id/diamond2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dimg2"
                    android:layout_centerHorizontal="true"
                    android:text="15,000 Diamonds"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/diamond2"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/coin2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="30"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_toEndOf="@+id/coin2"
                        android:src="@drawable/gcoinlogo" />


                </RelativeLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lline2">

        <androidx.cardview.widget.CardView
            android:id="@+id/exg3card"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/y_black"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/dimg3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/diamond" />

                <TextView
                    android:id="@+id/diamond3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dimg3"
                    android:layout_centerHorizontal="true"
                    android:text="20,000 Diamonds"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/diamond3"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/coin3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="40"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_toEndOf="@+id/coin3"
                        android:src="@drawable/gcoinlogo" />


                </RelativeLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exg4card"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/y_black"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/dimg4"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/diamond" />

                <TextView
                    android:id="@+id/diamond4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dimg4"
                    android:layout_centerHorizontal="true"
                    android:text="25,000 Diamonds"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/diamond4"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/coin4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="50"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_toEndOf="@+id/coin4"
                        android:src="@drawable/gcoinlogo" />


                </RelativeLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/dexgprog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/dexchangeAdView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.startapp.sdk.ads.banner.Banner
        android:id="@+id/dexchangeAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>